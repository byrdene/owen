{% set override = node.field_wide_header.value ? 'wide-header' : '' %}

{% set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  node.isSticky() ? 'node--sticky',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  override,
] %}

<section {{ attributes.addClass(classes)}}>

{#  <div class="breadcrumb-wrapper container padded-row content-small margin-top-x-small margin-bottom-small">#}
{#    {{ drupal_breadcrumb() }}#}
{#  </div>#}

  {% if content.field_main_image|render %}
    <div class="hero-image-wrapper margin-bottom-x-large">
      {{ content.field_main_image }}
    </div>
  {% endif %}

  <div class="page-title-wrapper container content-small padded-row">
    <h1{{ title_attributes }} class="page-title">{{ node.label }}</h1>
  </div>

  {% if content.field_intro_text|render %}
    <div class="intro-wrapper text__centered container content-small padded-row vertical-flow-large">
      {{ content.field_intro_text }}
    </div>
  {% endif %}

  {% if content.field_components|render %}
    <div class="content-wrapper container vertical-flow-large">
      {{ content.field_components }}
    </div>
  {% endif %}

  {% if content.field_related_view|render %}
    <div class="related-view-wrapper container vertical-flow vertical-flow-large">
      {{ content.field_related_view }}
    </div>
  {% endif %}

</section>
