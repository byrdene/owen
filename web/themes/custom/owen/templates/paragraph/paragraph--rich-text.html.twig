{%
  set classes = [
  'component',
  'component--type-' ~ paragraph.bundle|clean_class,
  'component-paragraph',
  'container',
  'bg__white',
]
%}

<section{{ attributes.addClass(classes) }}>
  <div class="component-wrapper container content-small padded-row">
    <div class="component-content">
      {{ title_suffix }}

      <div class="text-wrapper">
        {{ content.field_text }}
      </div>

    </div>
  </div>
</section>
